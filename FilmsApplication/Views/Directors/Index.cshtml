@model IEnumerable<FilmsApplication.Models.Director>

@{
    ViewData["Title"] = "Index";
}

<h1>List of directors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorBirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorDeathDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorBirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorDeathDay)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DirectorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DirectorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DirectorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
